<% layout('layouts/boilerplate') %>

    <div class="row">

        <h1 class="text-center">New Campground</h1>

        <div class="col-6 offset-3">
            <form action="/campgrounds" method="post" novalidate class="validated-form" enctype="multipart/form-data">

                <div class="mb-3">
                    <label class="form-label" for="title">Title</label>
                    <input class="form-control" type="text" name="campground[title]" id="title" required>
                    <div class="valid-feedback">
                        Looks Good To Me!
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label" for="locations">Location</label>
                    <input class="form-control" type="text" name="campground[location]" id="location" required>
                    <div class="valid-feedback">
                        Looks Good To Me!
                    </div>
                </div>



                <label class="form-label" for="image">Campground Price</label>

                <div>
                    <div class="input-group mb-3">
                        <span class="input-group-text" id="price">$</span>
                        <input step="0.01" type="text" class="form-control" placeholder="0.00" aria-label="Price"
                            aria-describedby="price" name="campground[price]" required>
                        <div class="valid-feedback">
                            Looks Good To Me!
                        </div>
                    </div>
                </div>


                <div class="mb-3">
                    <label class="form-label" for="description">Description</label>
                    <textarea class="form-control" type="text" name="campground[description]" id="location"
                        required></textarea>
                </div>

                <div class="mb-3">
                    <label for="formFileMultiple" class="form-label">Images</label>
                    <input name="image" class="form-control" type="file" id="formFileMultiple" multiple>
                </div>

                <div class="mb-3">
                    <button class="btn btn-success">Add Campground</button>
                </div>



            </form>
            <a href="/campgrounds">All Campgrounds</a>
        </div>

    </div>